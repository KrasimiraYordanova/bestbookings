<section>
    <h1>Register</h1>
    <form action="/auth/register" method="post">
        {{#if error}}
        {{#each error}}
        <p>{{this}}</p>
        {{/each}}
        {{/if}}
        <label><span>Username</span><input type="text" name="username"></label>
        <label><span>Password</span><input type="password" name="pass"></label>
        <label><span>Repeat Password</span><input type="password" name="repass"></label>
        <input type="submit" value="Log in">
    </form>

    <div><h3>You have an account? <a href="/auth/login">Login here</a></h3></div>
</section>